---
import { getCollection } from "astro:content";
import Base from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";
import { RSOP_STOPS } from "../../data/rsop";

// isFeaturedがtrueのイベントを取得（エラーハンドリング付き）
let featuredEvents = [];
let latestNews = [];

try {
  featuredEvents = await getCollection(
    "events",
    (entry: { data: { isFeatured: boolean } }) => {
      return entry.data.isFeatured === true;
    },
  );
} catch (error) {
  console.log("Events collection not found, using empty array");
}

try {
  const newsCollection = await getCollection("news");
  latestNews = newsCollection
    .sort(
      (
        a: { data: { publishDate: Date } },
        b: { data: { publishDate: Date } },
      ) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
    )
    .slice(0, 3);
} catch (error) {
  console.log("News collection not found, using empty array");
}
---

